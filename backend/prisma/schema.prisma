generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int        @id @default(autoincrement())
  username      String
  email         String?
  passwordHash  String
  createdAt     DateTime @default(now())

  workouts      Workout[]
  sessions      Session[]

  @@map("users")
}

model Exercise {
  id   Int    @id @default(autoincrement())
  name String @unique

  workoutExercises WorkoutExercise[]
  sessionExercises SessionExercise[]

  @@map("exercises")
}

model Workout {
  id                  Int      @id @default(autoincrement())
  name                String
  userId              Int?
  isDefaultTemplate   Boolean @default(false)
  createdAt  DateTime @default(now())

  workoutExercises WorkoutExercise[]

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("workouts")
}

model WorkoutExercise {
  id         Int @id @default(autoincrement())
  workoutId  Int
  exerciseId Int
  order      Int

  workout  Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id])
  sets     Set[]

  @@unique([workoutId, exerciseId])
  @@map("workoutexercises")
}

model Set {
  id                Int @id @default(autoincrement())
  workoutExerciseId Int
  setNumber         Int
  targetReps        Int
  targetWeight      Int

  workoutExercise WorkoutExercise @relation(fields: [workoutExerciseId], references: [id], onDelete: Cascade)

  @@unique([setNumber, workoutExerciseId])
  @@map("sets")
}

model Session {
  id          Int       @id @default(autoincrement())
  name        String
  userId      Int?
  workoutId   Int?
  createdAt   DateTime  @default(now())
  completedAt DateTime?
  sessionTime String?

  sessionExercises SessionExercise[]

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model SessionExercise {
  id         Int @id @default(autoincrement())
  sessionId  Int
  exerciseId Int
  order      Int

  exercise    Exercise     @relation(fields: [exerciseId], references: [id])
  sessionSets SessionSet[]

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("sessionexercises")
}

model SessionSet {
  id                Int @id @default(autoincrement())
  sessionExerciseId Int
  setNumber         Int
  reps              Int?
  weight            Float?
  isCompleted       Boolean @default(false)

  sessionExercise SessionExercise @relation(fields: [sessionExerciseId], references: [id], onDelete: Cascade)

  @@map("sessionsets")
}
