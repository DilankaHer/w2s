generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String
  email        String?
  passwordHash String
  createdAt    DateTime @default(now())

  workouts Workout[]
  sessions Session[]

  @@map("users")
}

model Exercise {
  id         Int    @id @default(autoincrement())
  name       String @unique
  bodyPartId Int?
  equipmentId Int?

  workoutExercises WorkoutExercise[]
  sessionExercises SessionExercise[]

  bodyPart BodyPart? @relation(fields: [bodyPartId], references: [id])
  equipment Equipment? @relation(fields: [equipmentId], references: [id])

  @@unique([id, bodyPartId, equipmentId])
  @@map("exercises")
}

model Workout {
  id                Int      @id @default(autoincrement())
  name              String
  userId            Int?
  isDefaultTemplate Boolean  @default(false)
  createdAt         DateTime @default(now())

  workoutExercises WorkoutExercise[]

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId, createdAt])
  @@map("workouts")
}

model WorkoutExercise {
  id         Int @id @default(autoincrement())
  workoutId  Int
  exerciseId Int
  order      Int

  workout  Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id])
  sets     Set[]

  @@unique([workoutId, exerciseId])
  @@index([workoutId, order])
  @@map("workoutexercises")
}

model Set {
  id                Int @id @default(autoincrement())
  workoutExerciseId Int
  setNumber         Int
  targetReps        Int
  targetWeight      Int

  workoutExercise WorkoutExercise @relation(fields: [workoutExerciseId], references: [id], onDelete: Cascade)

  @@unique([setNumber, workoutExerciseId])
  @@index([workoutExerciseId])
  @@map("sets")
}

model Session {
  id                    Int       @id @default(autoincrement())
  name                  String
  userId                Int?
  workoutId             Int?
  createdAt             DateTime  @default(now())
  completedAt           DateTime?
  sessionTime           String?
  isSyncedOnce          Boolean   @default(false)
  isFromDefaultTemplate Boolean   @default(false)

  sessionExercises SessionExercise[]

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("sessions")
}

model SessionExercise {
  id         Int @id @default(autoincrement())
  sessionId  Int
  exerciseId Int
  order      Int

  exercise    Exercise     @relation(fields: [exerciseId], references: [id])
  sessionSets SessionSet[]

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, exerciseId])
  @@index([sessionId, order])
  @@map("sessionexercises")
}

model SessionSet {
  id                Int    @id @default(autoincrement())
  sessionExerciseId Int
  setNumber         Int
  reps              Int?
  weight            Float?

  sessionExercise SessionExercise @relation(fields: [sessionExerciseId], references: [id], onDelete: Cascade)

  @@unique([setNumber, sessionExerciseId])
  @@index([sessionExerciseId])
  @@map("sessionsets")
}

model BodyPart {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  exercises Exercise[]

  @@map("bodyparts")
}

model Equipment {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  exercises Exercise[]

  @@map("equipment")
}
