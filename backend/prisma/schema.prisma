generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String @id
  username  String
  createdAt String

  workouts         Workout[]
  sessions         Session[]
  exercises        Exercise[]
  workoutExercises WorkoutExercise[]
  sets             Set[]

  @@map("users")
}

model BodyPart {
  id   String @id
  name String @unique

  exercises Exercise[]

  @@map("bodyparts")
}

model Equipment {
  id   String @id
  name String @unique

  exercises Exercise[]

  @@map("equipment")
}

model Exercise {
  id                String  @id
  name              String  @unique
  link              String?
  info              Json?
  imageName         String?
  bodyPartId        String?
  equipmentId       String?
  isDefaultExercise Boolean @default(false)
  userId            String?

  workoutExercises WorkoutExercise[]
  sessionExercises SessionExercise[]

  bodyPart  BodyPart?  @relation(fields: [bodyPartId], references: [id])
  equipment Equipment? @relation(fields: [equipmentId], references: [id])
  user      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([id, bodyPartId, equipmentId])
  @@map("exercises")
}

model Workout {
  id               String  @id
  name             String
  isDefaultWorkout Boolean @default(false)
  exerciseCount    Int
  setCount         Int
  createdAt        String
  userId           String?

  workoutExercises WorkoutExercise[]

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId, createdAt])
  @@map("workouts")
}

model WorkoutExercise {
  id         String  @id
  workoutId  String
  exerciseId String
  order      Int
  userId     String?

  workout  Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id])
  user     User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  sets     Set[]

  @@unique([workoutId, exerciseId])
  @@index([workoutId, order])
  @@map("workoutexercises")
}

model Set {
  id                String  @id
  workoutExerciseId String
  setNumber         Int
  targetReps        Int
  targetWeight      Float
  userId            String?

  workoutExercise WorkoutExercise @relation(fields: [workoutExerciseId], references: [id], onDelete: Cascade)
  user            User?           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([setNumber, workoutExerciseId])
  @@index([workoutExerciseId])
  @@map("sets")
}

model Session {
  id                   String  @id
  name                 String
  userId               String?
  workoutId            String?
  derivedWorkoutId     String?
  createdAt            String
  completedAt          String?
  sessionTime          String?
  isFromDefaultWorkout Boolean @default(false)
  exerciseCount        Int
  setCount             Int
  updatedWorkoutAt     String?

  sessionExercises SessionExercise[]

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("sessions")
}

model SessionExercise {
  id         String @id
  sessionId  String
  exerciseId String
  order      Int

  exercise    Exercise     @relation(fields: [exerciseId], references: [id])
  sessionSets SessionSet[]

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, exerciseId])
  @@index([sessionId, order])
  @@map("sessionexercises")
}

model SessionSet {
  id                String @id
  sessionExerciseId String
  setNumber         Int
  reps              Int
  weight            Float

  sessionExercise SessionExercise @relation(fields: [sessionExerciseId], references: [id], onDelete: Cascade)

  @@unique([setNumber, sessionExerciseId])
  @@index([sessionExerciseId])
  @@map("sessionsets")
}
